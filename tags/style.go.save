package tags

import (
	"strconv"

	"github.com/bketelsen/factor"
)

type Size string

func Px(pixels int) Size {
	return Size(strconv.Itoa(pixels) + "px")
}

func Color(value string) factor.Applyer {
	return factor.Style("color", value)
}

func Width(size Size) factor.Applyer {
	return factor.Style("width", string(size))
}

func MinWidth(size Size) factor.Applyer {
	return factor.Style("min-width", string(size))
}

func MaxWidth(size Size) factor.Applyer {
	return factor.Style("max-width", string(size))
}

func Height(size Size) factor.Applyer {
	return factor.Style("height", string(size))
}

func MinHeight(size Size) factor.Applyer {
	return factor.Style("min-height", string(size))
}

func MaxHeight(size Size) factor.Applyer {
	return factor.Style("max-height", string(size))
}

func Margin(size Size) factor.Applyer {
	return factor.Style("margin", string(size))
}

type OverflowOption string

const (
	OverflowVisible OverflowOption = "visible"
	OverflowHidden  OverflowOption = "hidden"
	OverflowScroll  OverflowOption = "scroll"
	OverflowAuto    OverflowOption = "auto"
)

func Overflow(option OverflowOption) factor.Applyer {
	return factor.Style("overflow", string(option))
}

func OverflowX(option OverflowOption) factor.Applyer {
	return factor.Style("overflow-x", string(option))
}

func OverflowY(option OverflowOption) factor.Applyer {
	return factor.Style("overflow-y", string(option))
}
